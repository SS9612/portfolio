    border: 1px solid var(--border);
    transition: all var(--duration) var(--easing);
  }

  .tech-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow);
    border-color: var(--primary);
  }

  .tech-icon {
    font-size: 1.5rem;
    flex-shrink: 0;
  }

  .tech-info {
    flex: 1;
    min-width: 0;
  }

  .tech-name {
