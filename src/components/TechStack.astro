    font-weight: 600;
    margin: 0 0 var(--space-1) 0;
    color: var(--fg);
  }

  .tech-description {
    font-size: 0.875rem;
    color: var(--muted);
    margin: 0;
    line-height: 1.4;
  }

  @media (max-width: 768px) {
    .tech-grid {
      grid-template-columns: 1fr;
    }

    .tech-card {
      padding: var(--space-2);
    }

    .category-section {
      padding: var(--space-4);
    }
  }

