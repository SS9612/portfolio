---
const { p } = Astro.props;
---
<a href={`/projects/${p.slug}`} class="card project-card">
  <div class="project-image">
    <img 
      src={p.thumbnail} 
      alt={p.name} 
      loading="lazy"
      width="280"
      height="157"
    />
  </div>
  <div class="project-header">
    <h3 class="project-title">{p.name}</h3>
    <span class="project-status status-chip" data-status={p.status} aria-label={`Status: ${p.status}`}>{p.status}</span>
  </div>
  <p class="project-tagline">{p.tagline}</p>
  <div class="project-stack">{p.stack.join(' Â· ')}</div>
</a>

<style>
  .project-card {
    display: block;
    text-decoration: none;
    color: inherit;
    height: 100%;
    transition: all 0.2s ease;
  }
  
  .project-card:hover {
    transform: translateY(-4px);
  }
  
  .project-image {
    width: 100%;
    aspect-ratio: 16/9;
    border-radius: 12px;
    margin-bottom: 0.75rem;
    overflow: hidden;
  }
  
  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.2s ease;
  }
  
  .project-card:hover .project-image img {
    transform: scale(1.05);
  }
  
  .project-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
  }
  
  .project-title {
    margin: 0;
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--fg);
  }
  
  .project-status {
    font-size: 0.8125rem;
    font-weight: 500;
    padding: 4px 12px;
    border-radius: var(--radius-sm);
    text-transform: capitalize;
  }
  
  .project-tagline {
    margin: 0.25rem 0 0.5rem;
    color: var(--muted);
    line-height: 1.5;
  }
  
  .project-stack {
    font-size: 0.8rem;
    opacity: 0.9;
    color: var(--muted);
  }
</style>
